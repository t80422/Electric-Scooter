@model Electric_Scooter.Models.PointSet

<main class="container-wrap">
    <div class="container-main">
        <!-- breadcrumb -->
        <section class="breadcrumb-wrap">
            <ul>
                <li>
                    <a href="">首頁</a>
                </li>
                <li>
                    <a href="@Url.Action("Index")">會員點數管理</a>
                </li>
                <li>
                    <p>設定</p>
                </li>
            </ul>
        </section>
        <!-- main -->
        @using (Html.BeginForm("Setting", "Point", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x=>x.ps_Id)

            <section class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(x => x.ps_Multiple, "倍率", new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.ps_Multiple, new { @class = "form-control", required = "required", type = "number", step = "0.001" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.ps_Validity, "時效(月)", new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(x => x.ps_Validity, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="儲存" class="btn btn-primary" />
                        @Html.ActionLink("返回列表", "Index", "Point", new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </section>
        }
    </div>
</main>